{% extends 'base.html.twig' %}

{% block title %}Liste des Médias{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Liste des Médias</h1>

        <table class="table table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Chemin</th>
                    <th>Nom</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for media in medias %}
                    <tr>
                        <tr>
                            <td>{{ media.id }}</td>
                            <td>{{ media.type }}</td>
                            <td>{{ media.path }}</td>
                            <td>{{ media.alt }}</td>
                            <td class="text-end">
                                <a href="{{ path('app_media_show', {'id': media.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                <a href="{{ path('app_media_edit', {'id': media.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                            </td>
                        </tr>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun Média</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
         <a href="{{ path('app_media_new') }}" class="btn btn-primary">Creér une nouvelle instance</a>
        <br>
        <a href="{{ path('app_administration') }}" class="btn btn-secondary mt-2">Retour à la gestion du catalogue</a>
    </div>
{% endblock %}
