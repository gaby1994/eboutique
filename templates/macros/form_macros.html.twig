{% macro form_field(field, icon, type='text', placeholder='') %}
<div class="mb-3">
    <label class="form-label">
        <i class="fa-solid fa-{{ icon }} me-1"></i>
        {{ field.vars.label }}
    </label>
    {{ form_widget(field, {'attr': {'class': 'form-control', 'type': type, 'placeholder': placeholder}}) }}
    {{ form_errors(field) }}
</div>
{% endmacro %}
