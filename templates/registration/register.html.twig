{% extends 'base.html.twig' %}
{% import 'macros/form_macros.html.twig' as forms %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="mb-4 text-center"><i class="fa-solid fa-user-plus me-2"></i>Cr√©er un compte</h2>

        {{ form_start(registerForm) }}

        {{ forms.form_field(registerForm.firstName, 'user') }}
        {{ forms.form_field(registerForm.lastName, 'user') }}
        {{ forms.form_field(registerForm.email, 'envelope', 'email') }}
        {{ forms.form_field(registerForm.phoneNumber, 'phone') }}
        {{ forms.form_field(registerForm.password.first, 'lock', 'password') }}
        {{ forms.form_field(registerForm.password.second, 'lock', 'password') }}

        <button class="btn btn-success w-100 mt-3" type="submit">
            <i class="fa-solid fa-user-plus me-1"></i> S'inscrire
        </button>

        {{ form_end(registerForm) }}
    </div>
</div>
{% endblock %}
