{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Liste des Catégories</h1>

        <table class="table table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th class="text-end">Actions</th>
                </tr>    
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>{{ category.description }}</td>
                            <td class="text-end">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                            </td>
                        </tr>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune Catégorie</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_category_new') }}" class="btn btn-primary">Creér une nouvelle instance</a>
        <br>
        <a href="{{ path('app_administration') }}" class="btn btn-secondary mt-2">Retour à la gestion du catalogue</a>
    </div>
{% endblock %}
