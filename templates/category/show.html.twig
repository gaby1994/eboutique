{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Détails Catégorie</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Retour à la liste</a>

        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Modifier</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
