{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Détails Produit</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>PriceHT</th>
                    <td>{{ product.priceHT }}</td>
                </tr>
                <tr>
                    <th>Available</th>
                    <td>{{ product.available ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Retour à la liste</a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">Modifier</a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
