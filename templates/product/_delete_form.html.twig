<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('supprimer' ~ product.id) }}">
    <button class="btn btn-sm btn-danger">Supprimer</button>
</form>
