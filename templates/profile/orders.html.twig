{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-center">Mes commandes</h2>

    {% if orders is empty %}
        <p>Vous n'avez pas encore passé de commande.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Date</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.dateHour|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('app_orders_show', {id: order.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
