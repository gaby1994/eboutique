{% extends 'base.html.twig' %}
{% import 'macros/form_macros.html.twig' as forms %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="mb-4 text-center"><i class="fa-solid fa-pen me-2"></i>Modifier mes informations</h2>

        {{ form_start(profileForm) }}

        {{ forms.form_field(profileForm.firstName, 'user') }}
        {{ forms.form_field(profileForm.lastName, 'user') }}
        {{ forms.form_field(profileForm.email, 'envelope', 'email') }}
        {{ forms.form_field(profileForm.phoneNumber, 'phone') }}
        {{ forms.form_field(profileForm.password, 'lock', 'password', 'Laisser vide si inchang√©') }}

        <button class="btn btn-primary w-100 mt-3" type="submit">
            <i class="fa-solid fa-save me-1"></i> Enregistrer
        </button>

        {{ form_end(profileForm) }}
    </div>
</div>
{% endblock %}
